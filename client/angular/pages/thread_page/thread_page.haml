.loading-wrapper.lmo-two-column-layout
  %loading{ng-if: "!threadPage.discussion"}
  %main.thread-page.lmo-row{ng-if: "threadPage.discussion"}
    %discussion_fork_actions{discussion: "threadPage.discussion", ng-show: "threadPage.discussion.isForking()"}
    %group_theme{group: "threadPage.discussion.group()", compact: "true", class: "elp-group-theme"}
    .thread-page__main-content{ng-class: "{'thread-page__forking': threadPage.discussion.isForking()}"}
      %outlet.before-column-right.lmo-column-right{name: "before-thread-page-column-right", model: "threadPage.discussion"}
      %decision_tools_card.decision-tools-card.lmo-column-right{discussion: "threadPage.discussion", ng-if: "isSiteAdmin"}
      %membership_card.lmo-column-right{group: "threadPage.discussion.guestGroup()", ng-if: "isSiteAdmin"}
      %membership_card.lmo-column-right{group: "threadPage.discussion.guestGroup()", pending: "true", ng-if: "isSiteAdmin"}
      %poll_common_index_card.lmo-column-right{model: "threadPage.discussion", ng-if: "isSiteAdmin"}
      %outlet.after-column-right.lmo-column-right{name: "thread-page-column-right"}
      %thread_card.lmo-column-left{discussion: "threadPage.discussion", ng-if: "isSiteAdmin"}
      %thread_card.lmo-column-left.elp-center-col{discussion: "threadPage.discussion", ng-if: "!isSiteAdmin"}
      
